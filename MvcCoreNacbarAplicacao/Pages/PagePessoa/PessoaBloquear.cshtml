@page
@model PessoaBloquearModel
@{
    ViewData["Title"] = "NsApp";
}

<h2>DESEJA BLOQUEAR A PESSOA @Model.Pessoa.DsNomepessoa.ToUpper()?</h2>
<form method="post">
    <div class="form-group col-md-6">
        <label class="control-label">MOTIVO BLOQUEIO</label>
        <select class="form-control" asp-items="@(new SelectList(Model.LstMotivoBloqueio, "IdBloqueio", "DsMotivobloqueio"))" id="cmbEstado">
            <option value="">Motivo Bloqueio...</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">EXCLUIR</button>
    <a href="PessoaLeitura?EnumPessoa=@PessoaLeituraModel.EnumPessoa" class="btn btn-primary">RETORNAR</a>
</form>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}