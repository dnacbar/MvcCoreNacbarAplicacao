@page
@model ProdutoLeituraModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "NsApp";
}

@* jQUery - DataTable *@
<script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
@* jQUery - DataTable BootStrap *@
<script src="~/lib/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
@* CSS - DataTable BootStrap *@
<link href="~/lib/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<script>
    $(document).ready(function () {
        $('#tableP').DataTable({
            language: {
                "decimal": "",
                "emptyTable": "SEM DADOS!",
                "info": "MOSTRANDO _START_ DE _END_ ATÉ _TOTAL_ LINHAS",
                "infoEmpty": "SEM DADOS",
                "infoFiltered": "(FILTRADO DE _MAX_ LINHAS)",
                "infoPostFix": "",
                thousands: ".",
                lengthMenu: "MOSTRAR _MENU_ ITEMS:",
                "loadingRecords": "Carregando...",
                "processing": "Processando...",
                search: "FILTRO:",
                "zeroRecords": "NENHUM DADO ENCONTRADO...",
                paginate: {
                    first: "PRIMEIRO",
                    last: "ÚLTIMO",
                    next: "PRÓXIMO",
                    previous: "ANTERIOR"
                },
                "aria": {
                    "sortAscending": ": activate to sort column ascending",
                    "sortDescending": ": activate to sort column descending"
                }
            },
            lengthMenu: [[15, 25, 50, 100, -1], [15, 25, 50, 100, "All"]]
        });
    })
</script>
<h4>PRODUTO</h4>
<hr />
<table id="tableP" class="table table-hover table-bordered" cellspacing="0">
    <thead>
        <tr>
            <th>NOME PRODUTO</th>
            <th>VISUALIZAR</th>
            <th>GERENCIAR</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>NOME PRODUTO</th>
            <th>VISUALIZAR</th>
            <th>GERENCIAR</th>
        </tr>
    </tfoot>
    <tbody>
        @{
            foreach (Produto item in Model.LstProduto)
            {
                <tr>
                    <td>@item.DsNomeproduto</td>
                    <td align="center"><a asp-page="ProdutoDetalhe" asp-route-id="@item.IdProduto" class="btn btn-xs btn-primary">VISUALIZAR</a></td>
                    <td align="center">
                        <a asp-page="ProdutoCriarEditar" asp-route-id="@item.IdProduto" class="btn btn-xs btn-warning">EDITAR</a>
                        <a asp-page="ProdutoBloquear" asp-route-id="@item.IdProduto" class="btn btn-xs btn-danger">EXCLUIR</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a class="btn btn-sm btn-primary" asp-page="ProdutoCriarEditar">CRIAR NOVO PRODUTO</a>